{
    "openapi": "3.0.0",
    "info":{
        "title": "API Technical Share",
        "description": "Essa API foi desenvolvida com o objetivo de: cadastrar e logar um usuario, e permetir que ele encontre e inicie conversas com mentores para terem orietacao e tirar duvidas",
        "contact": {
            "email": "squad19laranja@gmail.com"
        },
        "version": "1.0.0"
    },
    "paths": {
        "/users/register": {
            "post": {
                "summary": "Rota de Registro",
                "description": "Essa rota é responsavel por registrar o usuario",
                "tags": ["User"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/User"
                            },
                            "examples": {
                                "User": {
                                    "value": {
                                        "name": "Felipe Junior",
                                        "email": "felipe@teste.com",
                                        "password": "12345678",
                                        "role": "Dev Fullstack - Senior",
                                        "skills": ["CSS", "HTML", "JavaScript"]
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "401": { 
                        "description": "Usuário já existe!"
                    },
                    "201": {
                        "description": "Usuário criado com sucesso!",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type":"object",
                                    "$ref":"#/components/schemas/User"
                                }
                            }
                        }
                    }
                }
            }
            
        },
        "/users/login": {
            "post": {
                "summary": "Rota de Login",
                "description": "Essa rota é responsavel por autenticar e logar o usuario",
                "tags": ["User"],
                "security":[{"bearerAuth": [] }] ,
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/User"
                            },
                            "examples": {
                                "User": {
                                    "value": {                                     
                                        "email": "felipe@teste.com",
                                        "password": "12345678"                                       
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "401": { 
                        "description": "Usuário não encontrado!"
                    },
                    "200": {
                        "description": "Usuário logado com sucesso!",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type":"object",
                                    "$ref":"#/components/schemas/User"
                                }
                            }
                        }
                    }
                }
            }
            
        },
        "/users/{_id}": {
            "get": {
                "summary": "Rota de Buscar por Usuario",
                "description": "Essa rota é responsavel fazer a busca de um usuario especifico no banco de dados",
                "tags": ["User"],
                "parameters": [
                    {
                        "name": "_id",
                        "in": "path",
                        "description": "Busca por id do Usuario",
                        "required": true
                    }
                ],

                "responses": {
                    "400": { 
                        "description": "Erro ao carregar usuário!"
                    },
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type":"object",
                                    "$ref":"#/components/schemas/User"
                                }
                            }
                        }
                    }
                }
            }
            
        }
    },
    
    
    "components": {
        "schemas":{
            "User": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "required": true
                      },
                      "email": {
                        "type": "string",
                        "unique": true,
                        "required": true,
                        "lowercase": true
                      },
                      "password": {
                        "type": "string",
                        "required": true
                      },
                      "role": {
                        "type": "string",
                        "required": true
                      },
                      "tags": {
                          "items": {
                        "type": "array"
                          },
                        "required": true
                      },
                      "_id": {
                          "type": "string"
                      }
                     
                }
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    }

}